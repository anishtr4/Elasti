generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(uuid())
  name      String
  url       String
  createdAt DateTime @default(now())
  
  // Storing crossReferenceIds as a string array
  crossReferenceIds String[]

  // Scheduled Crawling
  crawlSchedule String?   // "daily", "weekly", "monthly"
  nextCrawlAt   DateTime?
  lastCrawledAt DateTime?
}
