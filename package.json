{
  "name": "elasti",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/api",
    "dev:api": "npm run dev --workspace=packages/api",
    "dev:dashboard": "npm run dev --workspace=packages/dashboard",
    "dev:widget": "npm run dev --workspace=packages/widget",
    "test:website": "serve test-website -l 8080",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "npm install && docker-compose up -d opensearch redis && echo 'âœ… Setup complete! Add your API keys to .env and run: npm run dev'"
  },
  "devDependencies": {
    "serve": "^14.2.1",
    "typescript": "^5.3.0"
  }
}